@{
    Layout = null;
}

@model WebNominal.Models.Usuario

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/autentificar.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>PhoneLab - Login</title>
</head>
<body>
    <div class="container-form registro">
        <div class="information">
            <div class="info-childs">
                <h2>Bienvenidos</h2>
                <p>"¡Bienvenido de vuelta! Por favor, inicia sesión para acceder a tu cuenta."</p>
                <input type="button" value="Iniciar Sesión" id="sign-in">
            </div>
        </div>
        <div class="form-information">
            <div class="form-information-childs">
                <h2>Crear una Cuenta</h2>
                <div class="icons">
                    <i class='bx bxl-google'></i>
                    <i class='bx bxl-facebook'></i>
                </div>
                <p>o usa tu email para Registrarte</p>
                <form class="form">
                    <label>
                        <i class='bx bx-user-circle'></i>
                        <input type="text" placeholder="Nombre Completo">
                    </label>
                    <label>
                        <i class='bx bx-envelope'></i>
                        <input type="email" placeholder="Correo Electronico">
                    </label>
                    <label>
                        <i class='bx bx-lock'></i>
                        <input type="password" placeholder="Contraseña">
                    </label>
                    <input type="submit" value="Registrarse">
                </form>
            </div>
        </div>
    </div>

    <div class="container-form login hide">
        <div class="information">
            <div class="info-childs">
                <h2>Bienvenido Nuevamente</h2>
                <p>Si aun no tienes una cuenta, ¿qué esperas? Regístrate aquí</p>
                <input type="button" value="Registrarse" id="sign-up">
            </div>
        </div>
        <div class="form-information">
            <div class="form-information-childs">
                <h2>Inicia Sesión</h2>
                <div class="icons">
                    <i class='bx bxl-google'></i>
                    <i class='bx bxl-facebook'></i>
                </div>
                <p>o inicia sesión con una cuenta</p>
                @using (Html.BeginForm("Login", "Acceso", FormMethod.Post))
                {
                    <div class="form">
                        <label>
                            <i class='bx bx-envelope'></i>
                            @Html.TextBoxFor(model => model.usuario, new { placeholder = "Correo Electrónico", required = true })
                        </label>
                        <label>
                            <i class='bx bx-lock'></i>
                            @Html.PasswordFor(model => model.pass, new {  placeholder = "Contraseña", required = true })
                        </label>
                        <input type="submit" value="Iniciar Sesión" class="btn btn-primary">
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-danger mt-2">
                                @ViewBag.Mensaje
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/js/Script.js"></script>
</body>
</html>
